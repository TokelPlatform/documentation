/* Set default values */

/* Import Montserrat & Rubik */

@import url("/fonts/Montserrat/Montserrat.css")
@import url("/fonts/Rubik/Rubik.css")

* {
    font-family: 'Rubik-Light', Arial, sans-serif;
}

/* Additional Overrides */


.hero > img, .home, img, target {
	max-width: 100%;
	max-height: 100%;
	overflow: hidden;
}

span .site-name .can-hide {
}

div .navbar, .navbar .links, .search-box, .nav-links, .nav-links .can-hide {
    background-color: #263867;
}

div .navbar .search-box input, div .navbar .search-box .suggestions, div .navbar .search-box .suggestions .focused {
    background-color: #000000;
}

.navbar .site-name, h1, h2, h3 {
    font-family: 'Rubik', sans-serif;
    font-weight: 600;
}

div .sidebar {
    background-color: #051019; 
}

div .page {
    background-image: linear-gradient(180deg, #13182a, #3e315e);
    min-height: 100vh;
    background-attachment: fixed;
}

.page .content p code, .theme-default-content code {
    background-color: hsla(0,0,0,.7);
}

div .page h1 {
    font-size: 2.2rem;
}

div .page h2 {
    font-size: 1.9rem;
}

div .page h3 {
    font-size: 1.7rem;
}

div .page h4 {
    font-size: 1.4rem;
}

div .page h5 {
    font-size: 1.2rem;
}

div .page h6 {
    font-size: 0.8rem;
}

thead tr {
    background-color: #3e315e;
    color: #687bf7;
    font-weight: 500;
}

tbody tr a {
    color: #3FA9F5;
}

table tbody tr:nth-child(2n) {
    background-color: #263867;
}

body .custom-block.tip, body .custom-block.tip .custom-block-title {
    background-color: #263867;
    border-color: #687bf7;
}

body .custom-block.warning, body .custom-block.warning .custom-block-title {
    background-color: #6d5747;
    border-color: #fe932a;
    color: #FFFFFF;
}

body .custom-block.danger, body .custom-block.danger .custom-block-title {
    background-color: #66091b;
    border-color: #e51938;
    color: #FFFFFF;
}

.content code {
    background-color: #000000;
}

@media (max-width: 419px){ 

	//nav bar, default is 3.6rem
	.navbar {
		height: 5.0rem;
	}

	//side bar top heading loses spacing, default is 0.5rem on first co-ordinate
	.sidebar .nav-links .nav-item {
		padding: 1.5rem 0 0.5rem 1.5rem;
	}

	// top heading of main page loses spacing, default is -1.5rem
	.content:not(.custom) > h1:first-child, .content:not(.custom) > h2:first-child, .content:not(.custom) > h3:first-child, .content:not(.custom) > h4:first-child, .content:not(.custom) > h5:first-child, .content:not(.custom) > h6:first-child {
		margin-top: -0.5rem;
	}
}

.introductoryImage {
    padding: 1rem;
    float: right;
    width: 50%;
}

.mobileIntroductoryImage {
    visibility: hidden;
    width: 0%;
}

.introductionLinkDiv {
    text-align: center;
    width: 100%;
}

.introductionLink {
    appearance: button;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    background-color: #3FA9F5;
    color: #FFFFFF;
    border-radius: 0.2rem;
    padding: 2rem;
    font-size: 1.7rem;
    border: 0;
    display: inline-block;
    margin: 1rem 0 0 0;
}

.video-wrapper {
  position: relative;
  display: block;
  height: 0;
  padding: 0;
  margin: 1rem 0 0 0;
  overflow: hidden;
  padding-bottom: 56.25%;
}

.video-wrapper > iframe {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}

@media (max-width: 849px) {

    .introductoryImage {
        visibility: hidden;
        width: 0%;
    }

    .mobileIntroductoryImage {
        visibility: visible;
        width: 100%;
    }
}
